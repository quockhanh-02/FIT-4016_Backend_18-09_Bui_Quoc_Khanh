@model OrderManagementApp.Models.Order

<h2>Edit Order</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <label>Order Number</label>
    <input asp-for="OrderNumber" readonly class="form-control" />

    <label>Product</label>
    <input value="@Model.Product.Name" readonly class="form-control" />

    <label>Customer Name</label>
    <input asp-for="CustomerName" class="form-control" />

    <label>Email</label>
    <input asp-for="CustomerEmail" class="form-control" />

    <label>Quantity</label>
    <input asp-for="Quantity" class="form-control" />

    <label>Delivery Date</label>
    <input asp-for="DeliveryDate" type="date" class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Update</button>
</form>
